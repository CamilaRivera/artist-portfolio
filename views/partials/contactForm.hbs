<form action="/contact" method="post">
  <div>
    <label required="required" for="name">{{i18n 'contactForm.inputs.name'}}:</label>
    <input type="text" id="name" name="name">
    {{#if errors.name}}
      <span class="error-message">{{i18n errors.name}}</span>
    {{/if}}
  </div>
  <div>
    <label required="required" for="email">Email:</label>
    <input type="email" id="email" name="email">
  </div>
  <div>
    <label required="required" for="type">{{i18n 'contactForm.inputs.type'}}:</label>
    {{#each priceBoxes}}
      {{#each sizes}}
        <option>
          {{size.height}} x {{size.width}}cm / {{cmToInches size.height}}” x {{cmToInches size.width}}”
        </option>
      {{/each}}
    {{/each}}
  </div>
  <div>
    <label for="body">{{i18n 'contactForm.inputs.body'}}:</label>
    <textarea id="body" name="body"></textarea>
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>